---
import '../styles/galeria.css'
---

<div class="gallery-container">
    <div class="gallery">
        <div class="gallery-track">
            <!-- Los items se agregarán dinámicamente con JavaScript -->
        </div>
        
        <!-- Contenedor para flechas y dots -->
        <div class="gallery-controls">
            <!-- Flechas de navegación -->
            <div class="gallery-arrow gallery-arrow-left">&#10094;</div>
            <!-- Indicadores de puntos -->
            <div class="gallery-dots">
                <!-- Los dots se agregarán dinámicamente con JavaScript -->
            </div>
            <div class="gallery-arrow gallery-arrow-right">&#10095;</div>
        </div>
    </div>
</div>

<!-- Lightbox -->
<div class="lightbox" id="lightbox">
    <span class="lightbox-close">&times;</span>
    <img class="lightbox-image" id="lightbox-image">
    <div class="lightbox-caption" id="lightbox-caption"></div>
</div>

<script is:global>
    document.addEventListener('DOMContentLoaded', function() {
    // Datos de ejemplo para la galería
    const galleryItems = [
        { id: 1, title: "Imagen 1", imageUrl: "https://raw.githubusercontent.com/AntonioHerrera1994/favlash-page/refs/heads/main/src/assets/galeria/galeria1.png" },
        { id: 2, title: "Imagen 2", imageUrl: "https://raw.githubusercontent.com/AntonioHerrera1994/favlash-page/refs/heads/main/src/assets/galeria/galeria2.png" },
        { id: 3, title: "Imagen 3", imageUrl: "https://github.com/AntonioHerrera1994/favlash-page/blob/main/src/assets/galeria/galeria3.png?raw=true" },
        { id: 4, title: "Imagen 4", imageUrl: "https://raw.githubusercontent.com/AntonioHerrera1994/favlash-page/refs/heads/main/src/assets/galeria/galeria4.png" },
        { id: 5, title: "Imagen 5", imageUrl: "https://github.com/AntonioHerrera1994/favlash-page/blob/main/src/assets/galeria/galeria5.png?raw=true" },
        { id: 6, title: "Imagen 6", imageUrl: "https://github.com/AntonioHerrera1994/favlash-page/blob/main/src/assets/galeria/galeria6.png?raw=true" },
        { id: 7, title: "Imagen 7", imageUrl: "https://github.com/AntonioHerrera1994/favlash-page/blob/main/src/assets/galeria/galeria7.png?raw=true" },
        { id: 8, title: "Imagen 8", imageUrl: "https://github.com/AntonioHerrera1994/favlash-page/blob/main/src/assets/galeria/galeria8.png?raw=true" },

    ];

   // Elementos del DOM
   const galleryTrack = document.querySelector('.gallery-track');
    const dotsContainer = document.querySelector('.gallery-dots');
    const arrowLeft = document.querySelector('.gallery-arrow-left');
    const arrowRight = document.querySelector('.gallery-arrow-right');
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-image');
    const lightboxCaption = document.getElementById('lightbox-caption');
    const lightboxClose = document.querySelector('.lightbox-close');
    
    // Configuración
    let visibleItems = window.innerWidth <= 768 ? 2 : 5; // 2 en móvil, 5 en desktop
    let currentIndex = 0;
    let autoPlayInterval;
    const autoPlayDelay = 3000;

    // Función para actualizar el número de items visibles según el tamaño de pantalla
    function updateVisibleItems() {
        visibleItems = window.innerWidth <= 768 ? 2 : 5;
        createDots();
        updateTrackPosition();
    }

    // Crear items de la galería
    function createGalleryItems() {
        galleryTrack.innerHTML = '';
        galleryItems.forEach(item => {
            const galleryItem = document.createElement('div');
            galleryItem.className = 'gallery-item';
            galleryItem.innerHTML = `
                <img src="${item.imageUrl.replace('800x500', '300x180')}" alt="${item.title}" data-fullsize="${item.imageUrl}">
                <div class="gallery-item-title">${item.title}</div>
            `;
            galleryTrack.appendChild(galleryItem);
        });

        // Agregar event listeners para el lightbox
        document.querySelectorAll('.gallery-item img').forEach(img => {
            img.addEventListener('click', function() {
                openLightbox(this.dataset.fullsize, this.alt);
            });
        });
    }

    // Función para abrir el lightbox
    function openLightbox(imageSrc, caption) {
        lightbox.style.display = 'block';
        lightboxImg.src = imageSrc;
        lightboxCaption.textContent = caption;
        document.body.style.overflow = 'hidden';
    }

    // Función para cerrar el lightbox
    function closeLightbox() {
        lightbox.style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    // Crear dots de navegación
    function createDots() {
        dotsContainer.innerHTML = '';
        const dotsCount = Math.max(galleryItems.length - visibleItems + 1, 1);
        
        for (let i = 0; i < dotsCount; i++) {
            const dot = document.createElement('div');
            dot.className = 'gallery-dot';
            if (i === currentIndex) dot.classList.add('active');
            dot.dataset.index = i;
            dot.addEventListener('click', () => goToSlide(i));
            dotsContainer.appendChild(dot);
        }
    }

    // Actualizar posición del track
    function updateTrackPosition() {
        const item = galleryTrack.children[0];
        if (!item) return;
        
        const itemWidth = item.offsetWidth + 15; // Ancho + gap
        galleryTrack.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
        
        // Actualizar dots activos
        const dots = document.querySelectorAll('.gallery-dot');
        dots.forEach((dot, index) => {
            if (index === currentIndex) {
                dot.classList.add('active');
            } else {
                dot.classList.remove('active');
            }
        });
    }

    // Ir a un slide específico
    function goToSlide(index) {
        currentIndex = index;
        updateTrackPosition();
        resetAutoPlay();
    }

    // Navegación
    function nextSlide() {
        const maxIndex = Math.max(galleryItems.length - visibleItems, 0);
        if (currentIndex >= maxIndex) {
            currentIndex = 0;
        } else {
            currentIndex++;
        }
        updateTrackPosition();
    }

    function prevSlide() {
        const maxIndex = Math.max(galleryItems.length - visibleItems, 0);
        if (currentIndex <= 0) {
            currentIndex = maxIndex;
        } else {
            currentIndex--;
        }
        updateTrackPosition();
    }

    // Autoplay
    function startAutoPlay() {
        autoPlayInterval = setInterval(nextSlide, autoPlayDelay);
    }

    function resetAutoPlay() {
        clearInterval(autoPlayInterval);
        startAutoPlay();
    }

    // Event listeners
    arrowLeft.addEventListener('click', () => {
        prevSlide();
        resetAutoPlay();
    });

    arrowRight.addEventListener('click', () => {
        nextSlide();
        resetAutoPlay();
    });

    lightboxClose.addEventListener('click', closeLightbox);
    lightbox.addEventListener('click', function(e) {
        if (e.target === lightbox) {
            closeLightbox();
        }
    });

    // Cerrar lightbox con ESC
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeLightbox();
        }
    });

    // Redimensionamiento de ventana
    window.addEventListener('resize', function() {
        updateVisibleItems();
    });

    // Inicializar
    createGalleryItems();
    updateVisibleItems();
    startAutoPlay();
});
</script>